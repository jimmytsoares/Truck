@model Truck.Web.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trucks[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trucks[0].ProductionYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trucks[0].ModelYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Trucks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductionYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelYear)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TruckId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TruckId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TruckId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
